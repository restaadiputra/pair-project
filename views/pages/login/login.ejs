<!DOCTYPE html>
<html>
  <% include ../../includes/head %>
<body>
  <% include ../../includes/navbar %>
  <div class="container">
    <%
    if(err !== null) {
    %>
    <div class="row">
      <div class="six columns">
        <h3><%=err%></h3>
      </div>
    </div>
    <%
    } else if(register !== null) {
    %>
    <div class="row">
      <div class="six columns">
        <h3><%=register%></h3>
      </div>
    </div>
    <%
    }
    %>
    <!-- login form -->
    <form action="/login" method="post">
      <div class="row">
        <div class="six columns offset-by-three u-cf">
          <h1>Login</h1>
          <label for="username">Username</label>
          <input name="username" class="u-full-width" type="text" placeholder="username" id="username">
          <br><br>
          <label for="password">Password</label>
          <input name="password" class="u-full-width" type="password" placeholder="password" id="password">
          <br><br>
          <input class="button-primary" type="submit" value="Login">
        </div>
      </div> 
    </form>
  </div>
</body>
</html>